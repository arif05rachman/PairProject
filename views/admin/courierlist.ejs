<!DOCTYPE html>
<%- include('./partials/header') %>
<body>
    <%- include('./partials/navbar', { page: "courier" }) %>
    <div class="container">
        <div class="text-center mt-4">
            <h2>Courier List</h2>
        </div>
        <% if(success.length > 0){ %>
            <div class="alert alert-success" role="alert">
                <%= success %>
            </div>
        <% } %>
        <table class="table mt-2 table-hover table-striped text-center table-bordered">
            <a href="/admin/courier/add"><button type="button" class="btn btn-primary mt-4 mb-2">Add</button></a>
            <thead class="thead-dark">
            <tr>
                <th scope="col">No.</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Phone Number</th>
                <th scope="col">Action</th>
            </tr>
            </thead>
            <tbody>
            <% couriers.forEach((courier, index) => { %>
            <tr>
                <th scope="row"><%= index + 1 %></th>
                <td><%= courier.name %></td>
                <td><%= courier.email %></td>
                <td><%= courier.phone_number %></td>
                <td>
                    <a href="/admin/courier/edit/<%= courier.id %>"><button type="button" class="btn btn-primary">Edit</button></a>
                    <a href="/admin/courier/delete/<%= courier.id %>"><button type="button" class="btn btn-warning">Delete</button></a>
                </td>
            </tr>
            <% }) %>
            </tbody>
        </table>
    </div>
</body>

<%- include('./partials/scriptlogin') %>
</html>